bool esCedulaValida(const char *cedula) {
    if (strlen(cedula) != 8){
        printf("La cédula debe tener exactamente 8 dígitos.\n");
        return false;
    }

    for (int i = 0; i < 8; i++) {
        if (!isdigit((unsigned char)cedula[i])){
            printf("La cédula solo debe contener dígitos.\n");
            return false;
        }
    }

    if(!existeCiVisitante(cedula)) {
        printf("La cédula no existe en la base de datos.\n");
        return false;
    }
    return true;
}

bool esMesValido(int mes) {
    if(mes < 1 || mes > 12) {
        printf("Mes inválido. Debe estar entre 1 y 12.\n");
        return false;
    }
    return true;
}